{
    "dataset": {
        "extension": "xdmf",
        "xdmf_folder": "/scratch-big/gsagot/predict",
        "meta_path": "dataset_config/airfoil_meta.json",
        "khop": 1,
        "new_edges_ratio": 0.2
    },
    "model": {
        "type": "transformer",
        "message_passing_num": 15,
        "hidden_size": 128,
        "node_input_size": 6,
        "output_size": 3,
        "edge_input_size": 0,
        "num_heads": 4,
        "use_silu_activation": true,
        "use_rope_embeddings": true,
        "use_gated_attention": true
    },
    "index": {
        "feature_index_start": 0,
        "feature_index_end": 6,
        "output_index_start": 0,
        "output_index_end": 3,
        "node_type_index": 6
    },
    "loss": {
        "type": ["l2loss", "cosinel2loss","gradientl2loss", "convectionl2loss", "divergencel2loss"],
        "weights": [1.0, 1.0, 1e-2, 1e-2, 1e-1],
        "gradient_method": "finite_diff"
    },
    "transformations": {
        "preprocessing": {
            "noise": [0.0,0.0],
            "noise_index_start": [0,2],
            "noise_index_end": [2,3],
            "masking": 0
        },
        "world_pos_parameters": {
            "use": false,
            "world_pos_index_start": 0,
            "world_pos_index_end": 3
        }
    },
    "training": {
        "use_spatial_mtp": true,
        "use_temporal_block": true
    }
}
